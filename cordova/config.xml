<?xml version='1.0' encoding='utf-8'?>
<widget id="com.buckless.client" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Guichet Cashless</name>
    <description>
        Application vendeur Cashless
    </description>
    <author email="contact@buckless.com" href="http://buckless.com">
        Buckless
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
        <preference name="Fullscreen" value="true" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
        <preference name="Fullscreen" value="true" />
    </platform>
    <engine name="android" spec="^6.2.3" />
    <plugin name="cordova-plugin-mifare-ultralight" spec="git+https://github.com/buckless-team/cordova-plugin-mifare-ultralight.git" />
</widget>
